  </head>
  <body class="text-center">

    

    <div class="form-signin" style="margin-top:70px">
        <form name="myform" action="/home"  method="POST">
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <label for="inputEmail" class="sr-only">Username</label>
  <input type="email" id="user" class="form-control" placeholder="Email address" name="user" required autofocus>
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" id="pass" class="form-control" placeholder="Password" name="pass" required style="margin-top:15px">
  
  <span style="color:red" id="error"></span>
  <p>New User?</p><a href='/register'> Click here to register</a>

  <button class="btn btn-lg btn-primary btn-block" type="button" onclick="loginUser()" style="margin-top:15px">Sign in</button>
</form> 
</div>

</div>



<script>
async function loginUser(){

	user=document.getElementById("user").value
	pass=document.getElementById("pass").value
	
	
	if(user=="" || pass=="")
	{
	document.getElementById("error").innerHTML="User/Password cannot be blank"
	return
	}
	
	
	 let resp=await fetch("login" , {
		   headers: {
			'Accept': 'application/json',
			'Content-Type': 'application/json'
			},
			method: "POST",
			body: JSON.stringify({'user':user, 'pass': pass})
			}
				
		
			)
		  let data = await resp.json()
		  let v = await data.data
		  if(v==true)
		  {
			console.log("redirecting")
      //return true
      window.myform.submit()
     // window.location.href = "http://localhost:3000/home";
		  }
		  else
			document.getElementById("error").innerHTML=v
	
	
}

</script>



</body>
</html>
