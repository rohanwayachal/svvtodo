	<script>
	

async function addUser(){

	user=document.getElementById("email").value
	pass=document.getElementById("pass").value
	cpass=document.getElementById("cpass").value
	
	 email= (/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(user))
	 
	 if(!email)
	 {
		document.getElementById("error").innerHTML="Invalid email"
		return
	}
	 

	
	
	if(user=="" || pass=="" || cpass=="")
	{
	document.getElementById("error").innerHTML="Field Cannot Be Blank"
	return
	}

	if(pass!==cpass)
		{document.getElementById("error").innerHTML="password doesnt match"}
	else
	{
		 let resp=await fetch("register" , {
		   headers: {
			'Accept': 'application/json',
			'Content-Type': 'application/json'
			},
			method: "POST",
			body: JSON.stringify({'user':user, 'pass': pass})
			}
				
		
			)
		  let data = await resp.json()
		  let v = await data.data
		  if(v==true)
		  {
			console.log("redirecting")
			window.location.href = "/";
		  }
		  else
			document.getElementById("error").innerHTML=v
	}
}





</script>


